<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyek & Tools</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between">
                <div class="flex space-x-7">
                    <div class="flex items-center py-4">
                        <a href="/" class="text-lg font-semibold">Roblog</a>
                    </div>
                    <div class="hidden md:flex items-center space-x-1">
                        <a href="/" class="py-4 px-2 text-gray-500 font-semibold hover:text-blue-500 transition duration-300">CV</a>
                        <a href="/airdrop" class="py-4 px-2 text-gray-500 font-semibold hover:text-blue-500 transition duration-300">Airdrop</a>
                        <a href="/blog" class="py-4 px-2 text-gray-500 font-semibold hover:text-blue-500 transition duration-300">Blog</a>
                        <a href="/project" class="py-4 px-2 text-blue-500 border-b-4 border-blue-500 font-semibold">Project</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8 text-center">Proyek & Tools</h1>

        <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-6">
            <% projects.forEach(function(project) { %>
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="p-6">
                        <h2 class="text-xl font-bold mb-2"><%= project.name %></h2>
                        <p class="text-gray-600 mb-4"><%= project.description %></p>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-500">
                                Updated <%= project.lastUpdate %>
                            </span>
                            <% if (project.url) { %>
                                <a href="<%= project.url %>" target="_blank" class="text-blue-500 hover:text-blue-700">
                                    Lihat Proyek â†’
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>

            <% if (projects.length === 0) { %>
                <div class="text-center py-8 col-span-2">
                    <p class="text-gray-500">Belum ada proyek yang ditambahkan.</p>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>